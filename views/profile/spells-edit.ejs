<h1 class="titlesp">EDIT THIS SPELL</h1>

 <form class="splform" method="POST" action="/profile/spells-list/<%- spell._id %>/update">
            <label> Title:
                <input type="text" name="spellname" value="<% if (update) { %><%= spell.spellname %><% } %>" />
            </label>

            <label> Description:
                <textarea  name="description" cols="30" rows="4" value="<% if (update) { %><%= spell.description %><% } %>"> </textarea>
            </label>
            
            <label> Difficulty:
                <input type="number" name="difficulty" min="1" max="3" value="<% if (update) { %><%= spell.difficulty %><% } %>"/>
            </label>
            
            <button class="duelbtn" type="submit"> Update your spell!</button>
            </form>
        <!-- END OF TYPING FORM -->

  </form>